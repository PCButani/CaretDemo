@section Scripts {
<script>
if (window.lucide) lucide.createIcons();

// Simulate Process Execution
let isRunning = false;
let simulationInterval = null;

document.getElementById('btnStartProcess').addEventListener('click', function() {
    if (isRunning) return;
    
    // Hide planning view, show monitoring view
    document.querySelector('.planning-view').style.display = 'none';
    document.querySelector('.monitoring-view').style.display = 'block';
    document.querySelector('.monitoring-controls').style.display = 'flex';
    document.querySelector('.exceptions-view').style.display = 'none';
    document.querySelector('.completion-view').style.display = 'none';
    document.querySelector('.audit-view').style.display = 'none';
    
    // Change button
    this.innerHTML = '<i data-lucide="loader"></i> Processing...';
    this.disabled = true;
    if (window.lucide) lucide.createIcons();
    
    // Update status
    document.getElementById('runMetaInfo').innerHTML = 
        '<span class="mini pill-running"><strong>Status:</strong> Running</span>' +
        '<span class="mini neutral"><strong>Run ID:</strong> ' + document.querySelector('.process-runmeta .mini:nth-child(2)').textContent.split(':')[1] + '</span>' +
        '<span class="mini neutral"><strong>Started:</strong> Just now</span>';
    
    isRunning = true;
    simulateProgress();
});

function simulateProgress() {
    let elapsed = 0;
    let rowsProcessed = 0;
    let maxRows = 128450;
    
    simulationInterval = setInterval(() => {
        elapsed++;
        rowsProcessed = Math.min(rowsProcessed + Math.random() * 8000, maxRows);
        
        // Update metrics
        document.getElementById('rowsProcessed').textContent = Math.floor(rowsProcessed).toLocaleString();
        document.getElementById('throughput').textContent = Math.floor(rowsProcessed / elapsed).toLocaleString();
        document.getElementById('elapsed').textContent = 
            Math.floor(elapsed / 60).toString().padStart(2, '0') + ':' + 
            (elapsed % 60).toString().padStart(2, '0');
        
        // Update object progress
        if (rowsProcessed > 45210) {
            document.getElementById('objectsComplete').textContent = '1/12';
        }
        if (rowsProcessed > 90000) {
            document.getElementById('objectsComplete').textContent = '2/12';
        }
        
        // Complete after ~15 seconds
        if (elapsed >= 15) {
            clearInterval(simulationInterval);
            showCompletion();
        }
    }, 1000);
}

function showCompletion() {
    // Update status
    document.getElementById('overallStatus').textContent = 'Complete';
    document.getElementById('overallStatus').className = 'pill pill-ok';
    document.getElementById('objectsComplete').textContent = '12/12';
    document.getElementById('rowsProcessed').textContent = '128,450';
    
    // Show completion and audit views
    setTimeout(() => {
        document.querySelector('.monitoring-view').style.display = 'none';
        document.querySelector('.completion-view').style.display = 'block';
        document.querySelector('.audit-view').style.display = 'block';
        document.querySelector('.monitoring-controls').style.display = 'none';
        
        // Reset button
        const btn = document.getElementById('btnStartProcess');
        btn.innerHTML = '<i data-lucide="check-circle"></i> Process Complete';
        btn.classList.remove('btn-primary');
        btn.classList.add('btn-secondary');
        if (window.lucide) lucide.createIcons();
        
        // Update run meta
        document.getElementById('runMetaInfo').innerHTML = 
            '<span class="mini pill-ok"><strong>Status:</strong> Complete</span>' +
            '<span class="mini neutral"><strong>Run ID:</strong> ' + document.querySelector('.audit-val').textContent + '</span>' +
            '<span class="mini neutral"><strong>Duration:</strong> 2m 14s</span>';
    }, 500);
    
    isRunning = false;
}

// AI Panel Toggle
document.getElementById('toggleAI')?.addEventListener('click', function() {
    const panel = document.getElementById('aiCoPilot');
    panel.style.display = panel.style.display === 'none' ? 'block' : 'block';
});

document.getElementById('closeAI')?.addEventListener('click', function() {
    document.getElementById('aiCoPilot').style.display = 'none';
});

// AI Quick Actions (mock)
document.querySelectorAll('.ai-quick-btn').forEach(btn => {
    btn.addEventListener('click', function() {
        const chat = document.querySelector('.ai-chat');
        const userMsg = document.createElement('div');
        userMsg.className = 'ai-msg';
        userMsg.innerHTML = `
            <div class="ai-avatar" style="background: rgba(107,114,128,0.2);">
                <i data-lucide="user"></i>
            </div>
            <div class="ai-bubble">${this.textContent}</div>
        `;
        chat.appendChild(userMsg);
        
        setTimeout(() => {
            const aiMsg = document.createElement('div');
            aiMsg.className = 'ai-msg ai-assistant';
            aiMsg.innerHTML = `
                <div class="ai-avatar"><i data-lucide="sparkles"></i></div>
                <div class="ai-bubble">
                    ${getAIResponse(this.textContent)}
                </div>
            `;
            chat.appendChild(aiMsg);
            chat.scrollTop = chat.scrollHeight;
            if (window.lucide) lucide.createIcons();
        }, 800);
        
        if (window.lucide) lucide.createIcons();
    });
});

function getAIResponse(question) {
    const responses = {
        'Explain Plan': 'The execution plan will run ADF pipeline <strong>pl_dmt_process_load</strong> which orchestrates 12 objects in chunked parallel mode. Each object goes through Staged → Transformed → Loaded lifecycle. Expected duration: ~2-3 minutes.',
        'Risk Summary': 'Current risk level is <strong>LOW</strong>. All Verify checks passed. The only minor concern is the Contacts table has 127 duplicate emails which were quarantined during Verify.',
        'Next Steps': 'You can safely proceed with Process. After completion, review the reconciliation report and download the audit artifacts for client handover.'
    };
    return responses[question] || 'I can help with that. Please be more specific about what you need.';
}
</script>
