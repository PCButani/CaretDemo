@model DataSync.Web.Models.ViewModels.ProjectDetailsVm
@{
    ViewData["Title"] = "Project Process";
    var activeTab = (ViewData["ActiveTab"] as string) ?? "Process";

    // Mock data for prototype
    var runId = "RUN-" + DateTime.Now.ToString("yyyyMMdd-HHmmss");
    var batchId = "BATCH-10934";
    var adfPipeline = "pl_dmt_process_load";
    var storedProc = "sp_dmt_process_pack";
}

<div class="process-page">

    <!-- PROJECT HERO -->
    <div class="project-hero">
        <div class="hero-left">
            <div class="hero-logo" aria-hidden="true">
                @(string.IsNullOrWhiteSpace(Model.ClientName) ? "C" : Model.ClientName.Trim().Substring(0, 1).ToUpperInvariant())
            </div>

            <div class="hero-text">
                <div class="hero-topline">
                    <a class="crumb-link" asp-controller="Projects" asp-action="Index">Projects</a>
                    <span class="crumb-sep">/</span>
                    <span class="crumb-current">@Model.Name</span>
                </div>

                <div class="hero-title-row">
                    <h1 class="hero-title">@Model.Name</h1>
                    <div class="hero-badges">
                        <span class="pill pill-status">@Model.Status</span>
                        <span class="pill pill-health">@Model.Health</span>
                        <span class="pill pill-env">@Model.Environment</span>
                    </div>
                </div>

                <div class="hero-meta">
                    <span><strong>Client:</strong> @Model.ClientName</span>
                    <span class="subdot">•</span>
                    <span><strong>Source:</strong> @Model.SourcePlatform</span>
                    <span class="subdot">•</span>
                    <span><strong>Target:</strong> @Model.TargetPlatform</span>
                    <span class="subdot">•</span>
                    <span><strong>Owner:</strong> @Model.Owner</span>
                </div>
            </div>
        </div>

        <div class="hero-right">
            <button class="btn btn-secondary" id="btnExport"><i data-lucide="download"></i> Export Plan</button>
            <button class="btn btn-primary" id="btnStartProcess"><i data-lucide="play-circle"></i> Start Process</button>
        </div>
    </div>

    <!-- TABS BAR -->
    <div class="details-tabs">
        <a class="tab-item" asp-controller="Projects" asp-action="Details" asp-route-id="@Model.Id">Overview</a>
        <a class="tab-item" asp-controller="Projects" asp-action="Fetch" asp-route-id="@Model.Id">Fetch</a>
        <a class="tab-item" asp-controller="Projects" asp-action="Verify" asp-route-id="@Model.Id">Verify</a>
        <a class="tab-item is-active" asp-controller="Projects" asp-action="Process" asp-route-id="@Model.Id">Process</a>
        <a class="tab-item" href="#">Config</a>
        <a class="tab-item" href="#">Activity</a>

        <div class="tabs-spacer"></div>

        <button class="tab-icon-btn" type="button" title="AI Assistant" id="toggleAI">
            <i data-lucide="sparkles"></i>
        </button>
    </div>

    <!-- PROCESS HEADER -->
    <div class="process-head">
        <div>
            <h2 class="process-title">Process</h2>
            <div class="process-subtitle">
                Final data load into SQL target systems - irreversible operation
            </div>
            <div class="process-runmeta" id="runMetaInfo">
                <span class="mini neutral"><strong>Status:</strong> Ready to execute</span>
                <span class="mini neutral"><strong>Run ID:</strong> @runId</span>
                <span class="mini neutral"><strong>Batch:</strong> @batchId</span>
            </div>
        </div>
    </div>

    <!-- MAIN GRID -->
    <div class="details-grid">

        <!-- LEFT COLUMN -->
        <section class="details-main">

            <!-- 1️⃣ EXECUTION ORCHESTRATION (Planning View) -->
            <div class="panel planning-view">
                <div class="panel-head">
                    <div>
                        <div class="panel-title">Execution Orchestration</div>
                        <div class="panel-sub">What will execute when you press Start Process</div>
                    </div>
                    <span class="pill pill-neutral">Pre-flight</span>
                </div>

                <div class="exec-cards">
                    <div class="exec-card">
                        <div class="exec-icon"><i data-lucide="workflow"></i></div>
                        <div class="exec-content">
                            <div class="exec-label">ADF Pipeline</div>
                            <div class="exec-value">@adfPipeline</div>
                            <div class="exec-sub">Sequential execution, timeout 2h</div>
                        </div>
                    </div>

                    <div class="exec-card">
                        <div class="exec-icon"><i data-lucide="database"></i></div>
                        <div class="exec-content">
                            <div class="exec-label">SQL Stored Procedure</div>
                            <div class="exec-value">@storedProc</div>
                            <div class="exec-sub">Target: DMT_Master_Prod</div>
                        </div>
                    </div>

                    <div class="exec-card">
                        <div class="exec-icon"><i data-lucide="layers"></i></div>
                        <div class="exec-content">
                            <div class="exec-label">Execution Mode</div>
                            <div class="exec-value">Chunked Parallel</div>
                            <div class="exec-sub">Batch size: 10,000 rows</div>
                        </div>
                    </div>

                    <div class="exec-card">
                        <div class="exec-icon"><i data-lucide="refresh-ccw"></i></div>
                        <div class="exec-content">
                            <div class="exec-label">Retry Policy</div>
                            <div class="exec-value">3 attempts</div>
                            <div class="exec-sub">Exponential backoff</div>
                        </div>
                    </div>

                    <div class="exec-card">
                        <div class="exec-icon"><i data-lucide="file-text"></i></div>
                        <div class="exec-content">
                            <div class="exec-label">Logging</div>
                            <div class="exec-value">ADF + SQL Audit</div>
                            <div class="exec-sub">Immutable audit trail</div>
                        </div>
                    </div>

                    <div class="exec-card">
                        <div class="exec-icon"><i data-lucide="shield-check"></i></div>
                        <div class="exec-content">
                            <div class="exec-label">Objects to Process</div>
                            <div class="exec-value">12 objects</div>
                            <div class="exec-sub">~128K rows estimated</div>
                        </div>
                    </div>
                </div>

                <div class="exec-warning">
                    <i data-lucide="alert-triangle"></i>
                    <div>
                        <strong>Important:</strong> This operation will modify production data and cannot be undone. 
                        Ensure Verify gate is clear before proceeding.
                    </div>
                </div>
            </div>

            <!-- 2️⃣ PROGRESS & MONITORING (Monitoring View - hidden initially) -->
            <div class="panel monitoring-view" style="display:none;">
                <div class="panel-head">
                    <div>
                        <div class="panel-title">Progress & Monitoring</div>
                        <div class="panel-sub">Real-time execution status</div>
                    </div>
                    <span class="pill pill-running" id="overallStatus">Running</span>
                </div>

                <!-- Overall Progress -->
                <div class="progress-summary">
                    <div class="prog-stat">
                        <div class="prog-num" id="rowsProcessed">0</div>
                        <div class="prog-label">Rows Processed</div>
                    </div>
                    <div class="prog-stat">
                        <div class="prog-num" id="objectsComplete">0/12</div>
                        <div class="prog-label">Objects Complete</div>
                    </div>
                    <div class="prog-stat">
                        <div class="prog-num" id="throughput">0</div>
                        <div class="prog-label">Rows/sec</div>
                    </div>
                    <div class="prog-stat">
                        <div class="prog-num" id="elapsed">00:00</div>
                        <div class="prog-label">Elapsed Time</div>
                    </div>
                </div>

                <!-- Per-Object Progress -->
                <div class="objects-progress">
                    <div class="obj-prog-item">
                        <div class="obj-prog-top">
                            <span class="obj-name">Contacts</span>
                            <span class="obj-status status-running">Running</span>
                        </div>
                        <div class="pbar good"><span style="width: 67%"></span></div>
                        <div class="obj-prog-foot">
                            <span>30,421 / 45,210 rows</span>
                            <span>Staged → Transformed → Loading</span>
                        </div>
                    </div>

                    <div class="obj-prog-item">
                        <div class="obj-prog-top">
                            <span class="obj-name">Invoices</span>
                            <span class="obj-status status-complete">Complete</span>
                        </div>
                        <div class="pbar good"><span style="width: 100%"></span></div>
                        <div class="obj-prog-foot">
                            <span>61,880 / 61,880 rows</span>
                            <span>✓ Loaded successfully</span>
                        </div>
                    </div>

                    <div class="obj-prog-item">
                        <div class="obj-prog-top">
                            <span class="obj-name">Matters</span>
                            <span class="obj-status status-queued">Queued</span>
                        </div>
                        <div class="pbar neutral"><span style="width: 0%"></span></div>
                        <div class="obj-prog-foot">
                            <span>0 / 8,420 rows</span>
                            <span>Waiting...</span>
                        </div>
                    </div>
                </div>

                <div class="monitoring-foot">
                    <span class="mini neutral">ADF Run ID: adf-run-20241223-091045</span>
                    <button class="btn btn-secondary btn-sm">View ADF Logs</button>
                </div>
            </div>

            <!-- 3️⃣ EXCEPTIONS & REMEDIATION (Shows when failures occur) -->
            <div class="panel exceptions-view" style="display:none;">
                <div class="panel-head">
                    <div>
                        <div class="panel-title">Exceptions & Remediation</div>
                        <div class="panel-sub">Failures and recovery actions</div>
                    </div>
                    <span class="pill pill-warn">2 Failures</span>
                </div>

                <div class="exception-cards">
                    <div class="exc-card">
                        <div class="exc-header">
                            <div class="exc-icon bad"><i data-lucide="x-circle"></i></div>
                            <div>
                                <div class="exc-title">Uniqueness Constraint Violation</div>
                                <div class="exc-meta">Contacts table • Data Quality Issue</div>
                            </div>
                            <span class="exc-impact">127 rows</span>
                        </div>
                        <div class="exc-reason">
                            Duplicate Email values detected. Primary key constraint failed on insert.
                        </div>
                        <div class="exc-actions">
                            <button class="btn btn-secondary btn-sm">Export Failed Rows</button>
                            <button class="btn btn-secondary btn-sm">Return to Verify</button>
                            <button class="btn btn-primary btn-sm">Retry</button>
                        </div>
                    </div>

                    <div class="exc-card">
                        <div class="exc-header">
                            <div class="exc-icon warn"><i data-lucide="alert-circle"></i></div>
                            <div>
                                <div class="exc-title">Timeout Exceeded</div>
                                <div class="exc-meta">Time Entries table • System Issue</div>
                            </div>
                            <span class="exc-impact">0 rows</span>
                        </div>
                        <div class="exc-reason">
                            SQL execution exceeded 120s timeout. Consider increasing batch size or timeout limit.
                        </div>
                        <div class="exc-actions">
                            <button class="btn btn-secondary btn-sm">View Logs</button>
                            <button class="btn btn-primary btn-sm">Retry with Extended Timeout</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 5️⃣ COMPLETION OUTPUT (Shows after successful run) -->
            <div class="panel completion-view" style="display:none;">
                <div class="panel-head">
                    <div>
                        <div class="panel-title">Completion Summary</div>
                        <div class="panel-sub">Final load results and reconciliation</div>
                    </div>
                    <span class="pill pill-ok">Complete</span>
                </div>

                <div class="completion-hero">
                    <div class="completion-icon"><i data-lucide="badge-check"></i></div>
                    <div>
                        <div class="completion-title">Migration Load Complete</div>
                        <div class="completion-sub">All objects processed successfully</div>
                    </div>
                </div>

                <div class="completion-stats">
                    <div class="comp-stat">
                        <div class="comp-num good">128,450</div>
                        <div class="comp-label">Rows Inserted</div>
                    </div>
                    <div class="comp-stat">
                        <div class="comp-num neutral">0</div>
                        <div class="comp-label">Rows Updated</div>
                    </div>
                    <div class="comp-stat">
                        <div class="comp-num bad">0</div>
                        <div class="comp-label">Rows Failed</div>
                    </div>
                    <div class="comp-stat">
                        <div class="comp-num good">100%</div>
                        <div class="comp-label">Reconciliation</div>
                    </div>
                </div>

                <div class="completion-artifacts">
                    <div class="artifact-item">
                        <i data-lucide="file-check"></i>
                        <span>Final_Load_Report_@(runId).pdf</span>
                        <button class="btn btn-secondary btn-sm">Download</button>
                    </div>
                    <div class="artifact-item">
                        <i data-lucide="file-spreadsheet"></i>
                        <span>Reconciliation_Summary_@(runId).xlsx</span>
                        <button class="btn btn-secondary btn-sm">Download</button>
                    </div>
                </div>

                <div class="golive-indicator good">
                    <i data-lucide="rocket"></i>
                    <strong>Go-Live Ready:</strong> All criteria met. System ready for production handover.
                </div>
            </div>

            <!-- 4️⃣ AUDIT & TRACEABILITY -->
            <div class="panel audit-view" style="display:none;">
                <div class="panel-head">
                    <div>
                        <div class="panel-title">Audit & Traceability</div>
                        <div class="panel-sub">Compliance and governance record</div>
                    </div>
                </div>

                <div class="audit-grid">
                    <div class="audit-row">
                        <div class="audit-key">Run ID</div>
                        <div class="audit-val">@runId</div>
                    </div>
                    <div class="audit-row">
                        <div class="audit-key">Batch ID</div>
                        <div class="audit-val">@batchId</div>
                    </div>
                    <div class="audit-row">
                        <div class="audit-key">Triggered By</div>
                        <div class="audit-val">@Model.Owner (Manual)</div>
                    </div>
                    <div class="audit-row">
                        <div class="audit-key">Timestamp</div>
                        <div class="audit-val">@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss UTC")</div>
                    </div>
                    <div class="audit-row">
                        <div class="audit-key">Input Dataset</div>
                        <div class="audit-val">stg_@(Model.SourcePlatform.ToLower())_verified_snapshot_v12</div>
                    </div>
                    <div class="audit-row">
                        <div class="audit-key">Mapping Version</div>
                        <div class="audit-val">v2.4.1 (approved 2024-12-20)</div>
                    </div>
                    <div class="audit-row">
                        <div class="audit-key">Ruleset Version</div>
                        <div class="audit-val">rules_@(Model.SourcePlatform.ToLower())_v3.2</div>
                    </div>
                    <div class="audit-row">
                        <div class="audit-key">Target System</div>
                        <div class="audit-val">DMT_Master_Prod (SQL Server)</div>
                    </div>
                </div>

                <div class="audit-seal">
                    <i data-lucide="shield"></i>
                    This audit record is immutable and tamper-proof. Stored in dmt_audit_log table.
                </div>
            </div>

        </section>

        <!-- RIGHT COLUMN -->
        <aside class="details-side">

            <!-- 6️⃣ AI CO-PILOT PANEL -->
            <div class="panel ai-panel" id="aiCoPilot">
                <div class="panel-head">
                    <div>
                        <div class="panel-title">AI Co-Pilot</div>
                        <div class="panel-sub">Azure AI Foundry Assistant</div>
                    </div>
                    <button class="ai-close" id="closeAI"><i data-lucide="x"></i></button>
                </div>

                <div class="ai-chat">
                    <div class="ai-msg ai-assistant">
                        <div class="ai-avatar"><i data-lucide="sparkles"></i></div>
                        <div class="ai-bubble">
                            I'm ready to help you with the Process step. You can ask me:
                            <ul>
                                <li>Explain execution plan</li>
                                <li>Why did object X fail?</li>
                                <li>Generate reconciliation summary</li>
                                <li>What should I do next?</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="ai-input-area">
                    <input type="text" placeholder="Ask me anything..." id="aiInput" />
                    <button class="ai-send"><i data-lucide="send"></i></button>
                </div>

                <div class="ai-quick-actions">
                    <button class="ai-quick-btn">Explain Plan</button>
                    <button class="ai-quick-btn">Risk Summary</button>
                    <button class="ai-quick-btn">Next Steps</button>
                </div>
            </div>

            <!-- Schedule & Actions -->
            <div class="panel">
                <div class="panel-head">
                    <div>
                        <div class="panel-title">Run Control</div>
                        <div class="panel-sub">Execution management</div>
                    </div>
                </div>

                <div class="kv">
                    <div class="kv-row">
                        <div class="kv-k">Mode</div>
                        <div class="kv-v">Manual</div>
                    </div>
                    <div class="kv-row">
                        <div class="kv-k">Environment</div>
                        <div class="kv-v">@Model.Environment</div>
                    </div>
                    <div class="kv-row">
                        <div class="kv-k">Rollback</div>
                        <div class="kv-v">Not available</div>
                    </div>
                </div>

                <div class="side-actions monitoring-controls" style="display:none;">
                    <button class="btn btn-secondary w-100" id="btnPause">
                        <i data-lucide="pause"></i> Pause
                    </button>
                    <button class="btn btn-danger w-100" id="btnCancel">
                        <i data-lucide="stop-circle"></i> Cancel Run
                    </button>
                </div>
            </div>

        </aside>

    </div>

</div>

