@{
    Layout = null;   // ❗ No sidebar / navbar on login page
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login | CARET</title>

    <link href="~/css/login.css" rel="stylesheet" />
    <style>
        :root {
    --green-dark: #0f3b2f;
    --green-light: #9fe3c0;
    --border: #e5e7eb;
    --text: #111827;
    --muted: #6b7280;
}

/* Layout */
.login-page {
    display: flex;
    height: 100vh;
    font-family: Inter, system-ui, Arial, sans-serif;
}

/* LEFT */
.login-left {
    width: 45%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #ffffff;
}

.login-box {
    width: 100%;
    max-width: 380px;
}

/* Branding */
.brand {
    font-size: 36px;
    font-weight: 700;
    color: var(--green-dark);
    margin-bottom: 10px;
}

.subtitle {
    color: var(--muted);
    margin-bottom: 28px;
}

/* Form */
.form-group {
    margin-bottom: 16px;
}

.form-group label {
    display: block;
    font-size: 14px;
    margin-bottom: 6px;
    color: var(--text);
}

.form-group input {
    width: 100%;
    padding: 12px 14px;
    border-radius: 10px;
    border: 1px solid var(--border);
    font-size: 14px;
}

.form-group input:focus {
    outline: none;
    border-color: var(--green-dark);
}

/* Actions */
.form-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 13px;
    margin-bottom: 20px;
}

.link {
    color: var(--green-dark);
    text-decoration: none;
    font-weight: 500;
}

/* Button */
.btn-primary {
    width: 100%;
    padding: 12px;
    border-radius: 12px;
    border: none;
    background: var(--green-dark);
    color: white;
    font-size: 15px;
    font-weight: 600;
    cursor: pointer;
}

.btn-primary:hover {
    opacity: 0.95;
}

/* Footer */
.footer-text {
    margin-top: 32px;
    font-size: 12px;
    color: var(--muted);
    text-align: center;
}

/* RIGHT */
.login-right {
    width: 55%;
    background: var(--green-dark);
    display: flex;
    align-items: center;
    justify-content: center;
}

.login-right img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* Responsive */
@@media (max-width: 900px) {
    .login-right {
        display: none;
    }

    .login-left {
        width: 100%;
    }
}

    </style>
</head>
<body>

    <div class="login-page">

        <!-- LEFT -->
        <div class="login-left">
            <div class="login-box">
                <h1 class="brand">Login</h1>
                @* <p class="subtitle">Data Migration Platform</p> *@

                <form asp-action="Login" asp-controller="Account" method="post">
                    <div class="form-group">
                        <label>Email</label>
                        <input name="Email" type="email" required />
                    </div>

                    <div class="form-group">
                        <label>Password</label>
                        <input name="Password" type="password" required />
                    </div>

                    <div class="form-actions">
                        <label>
                            <input type="checkbox" /> Remember me
                        </label>
                        <a href="#">Forgot password?</a>
                    </div>

                    <button type="submit" class="btn-primary">
                        Sign In
                    </button>
                </form>
            </div>
        </div>

        <!-- RIGHT -->
        <div class="login-right">
            <img src="~/images/caret-signin.png" alt="CARET Platform" />
        </div>

    </div>

</body>
</html>
